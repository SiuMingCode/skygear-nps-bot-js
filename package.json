{
  "name": "skygear-nps-bot-js",
  "version": "1.0.0",
  "description": "Slack bot built with Skygear Cloud JS Code",
  "main": "index.js",
  "scripts": {
    "build": "npm run lint:fix && rm -r build/* && babel src -d build",
    "deploy": "npm run build && git add -A && git commit --amend --no-edit && git push -f skygear master",
    "lint": "eslint src || exit 0",
    "lint:fix": "eslint src --fix || exit 0",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Oursky",
  "license": "Apache-2.0",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "eslint": "^4.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1"
  },
  "dependencies": {
    "@slack/client": "^3.10.0",
    "node-schedule": "^1.2.3",
    "plotly": "^1.0.6",
    "skygear": "^1.0.0",
    "unirest": "^0.5.1"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@git.skygeario.com/npsbot.git"
  }
}
